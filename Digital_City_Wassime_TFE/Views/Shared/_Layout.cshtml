<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HOSPITAL SOFTWARE WASSIME</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/Digital_City_Wassime_TFE.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="p-4">
        <nav class="navbar navbar-expand-custom navbar-mainbg">
            <a class="navbar-brand navbar-logo" href="#">Hospital Software Wassime</a>
            <button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars text-white"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <div class="hori-selector"><div class="left"></div><div class="right"></div></div>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Home" class="nav-link"><i class="fas fa-tachometer-alt"></i>Urgence</a>
                    </li>
                    <li class="nav-item active">
                        <a asp-action="AddPatient" asp-controller="Home" class="nav-link"><i class="far fa-address-book"></i>Patients</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="AddPatient" asp-controller="Home" class="nav-link"><i class="far fa-clone"></i>New Patient</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="PatientOfDay" class="nav-link"><i class="far fa-copy"></i>Patient of the day
</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>







    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Digital_City_Wassime_TFE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
